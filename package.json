{
  "name": "back-end",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint --config .eslintrc.yml --fix './src/**/*.ts'",
    "dev": "nodemon 'src/index.ts' --exec 'ts-node' src/index.ts -e ts,graphql",
    "start": "npm run build && node 'dist/index.js'",
    "build": "npm run clean && tsc -p . && rsync -av --progress src/graphql/typeDefs/* dist/graphql/typeDefs/ --exclude {'*.ts'}",
    "test": "jest --verbose --watchAll=false",
    "prisma:introspect": "npx prisma introspect",
    "prisma:migrate:save": "npx prisma migrate save --experimental",
    "prisma:migrate:up": "npx prisma migrate up --experimental --verbose",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "prisma:seed": "ts-node ./prisma/seed.ts",
    "docker:build": "docker-compose --file docker-compose.yml up --build --detach",
    "docker:exec:postgresql-db": "docker exec --interactive=true --tty=true postgresql-db /bin/bash",
    "codegen": "nodemon 'src/index.ts' --exec 'graphql-codegen --config codegen.yml'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "latest",
    "apollo": "latest",
    "apollo-datasource-rest": "latest",
    "apollo-server-express": "latest",
    "express": "latest",
    "graphql": "latest",
    "graphql-iso-date": "latest",
    "graphql-tools": "latest",
    "lodash": "latest",
    "typescript": "latest"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "latest",
    "@graphql-codegen/typescript": "latest",
    "@graphql-codegen/typescript-operations": "latest",
    "@graphql-codegen/typescript-resolvers": "latest",
    "@prisma/cli": "latest",
    "@types/express": "latest",
    "@types/graphql": "latest",
    "@types/jest": "latest",
    "@types/lodash": "latest",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-simple-import-sort": "latest",
    "graphql-import-node": "latest",
    "jest": "latest",
    "nodemon": "latest",
    "prettier": "latest",
    "rimraf": "latest",
    "ts-jest": "latest",
    "ts-node": "latest"
  }
}
