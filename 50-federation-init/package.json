{
  "name": "federation-gateway",
  "version": "1.0.0",
  "description": "",
  "main": "gateway.ts",
  "scripts": {
    "lint": "eslint --config .eslintrc.yml --fix './src/**/*.ts'",
    "clean": "rimraf dist && lerna run --parallel clean",
    "clean:services": "concurrently \"npm:clean:service-*\"",
    "clean:service-accounts": "rimraf services/accounts/dist",
    "clean:service-reviews": "rimraf services/reviews/dist",
    "clean:service-products": "rimraf services/products/dist",
    "clean:service-inventory": "rimraf services/inventory/dist",
    "dev:gateway": "nodemon 'src/gateway.ts' --exec 'ts-node' src/gateway.ts -e ts",
    "dev:services": "concurrently \"npm:dev:service-*\"",
    "dev:service-accounts": "nodemon 'services/accounts/src/index.ts' --exec 'ts-node' services/accounts/src/index.ts -e ts",
    "dev:service-reviews": "nodemon 'services/reviews/src/index.ts' --exec 'ts-node' services/reviews/src/index.ts -e ts",
    "dev:service-products": "nodemon 'services/products/src/index.ts' --exec 'ts-node' services/products/src/index.ts -e ts",
    "dev:service-inventory": "nodemon 'services/inventory/src/index.ts' --exec 'ts-node' services/inventory/src/index.ts -e ts",
    "build:gateway": "npm run clean && tsc -p .",
    "build:services": "concurrently \"npm:build:service-*\"",
    "build:service-accounts": "npm run clean:service-accounts && tsc -p services/accounts",
    "build:service-reviews": "npm run clean:service-reviews && tsc -p services/reviews",
    "build:service-products": "npm run clean:service-products && tsc -p services/products",
    "build:service-inventory": "npm run clean:service-inventory && tsc -p services/inventory",
    "start:gateway": "node 'dist/gateway.js'",
    "start:services": "concurrently \"npm:start:service-*\"",
    "start:service-accounts": "node 'services/accounts/dist/index.js'",
    "start:service-reviews": "node 'services/reviews/dist/index.js'",
    "start:service-products": "node 'services/products/dist/index.js'",
    "start:service-inventory": "node 'services/inventory/dist/index.js'",
    "postinstall": "lerna bootstrap",
    "release": "lerna publish"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/gateway": "latest",
    "apollo-server": "latest",
    "graphql": "latest",
    "typescript": "latest"
  },
  "devDependencies": {
    "@types/graphql": "latest",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "concurrently": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-simple-import-sort": "latest",
    "lerna": "latest",
    "nodemon": "latest",
    "prettier": "latest",
    "rimraf": "latest",
    "ts-node": "latest"
  }
}
