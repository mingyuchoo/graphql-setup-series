{
  "name": "apollo-server-using-mongodb",
  "version": "latest",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint --config .eslintrc.yml --fix './src/**/*.ts'",
    "dev": "ts-node-dev --transpile-only --no-notify src/index.ts",
    "build": "npm run generate && tsc -p .",
    "start": "node 'dist/index.js'",
    "test": "npm run generate && jest --verbose --watchAll=false",
    "generate": "ts-node --transpile-only src/schema",
    "schemagen": "ts-node src/scripts/schemagen.ts",
    "codegen": "graphql-codegen --config codegen.yml",
    "seed": "ts-node src/scripts/seed.ts",
    "docker:build": "docker-compose --file docker-compose.yml up --build --detach",
    "docker:exec": "docker exec --interactive=true --tty=true mongo-db /bin/bash"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "latest",
    "apollo-server-express": "latest",
    "body-parser": "latest",
    "cors": "latest",
    "dotenv": "latest",
    "express": "latest",
    "graphql": "latest",
    "graphql-compose": "latest",
    "graphql-compose-connection": "latest",
    "graphql-compose-mongoose": "latest",
    "graphql-middleware": "latest",
    "graphql-tools": "latest",
    "mongoose": "latest",
    "mongoose-bcrypt": "latest"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "latest",
    "@graphql-codegen/typescript": "latest",
    "@graphql-codegen/typescript-operations": "latest",
    "@graphql-codegen/typescript-resolvers": "latest",
    "@types/cors": "latest",
    "@types/express": "latest",
    "@types/faker": "latest",
    "@types/fs-extra": "latest",
    "@types/jest": "latest",
    "@types/mongoose": "latest",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-simple-import-sort": "latest",
    "faker": "latest",
    "fs-extra": "latest",
    "get-port": "latest",
    "graphql-request": "latest",
    "husky": "latest",
    "jest": "latest",
     "prettier": "latest",
    "rimraf": "latest",
    "ts-jest": "latest",
    "ts-node": "latest",
    "ts-node-dev": "latest",
    "typescript": "latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "testEnvironment": "node"
  }
}
