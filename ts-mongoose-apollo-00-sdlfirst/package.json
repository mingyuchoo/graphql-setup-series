{
  "name": "apollo-server-using-mongodb",
  "version": "latest",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint --config .eslintrc.yml --fix './src/**/*.ts'",
    "dev": "ts-node-dev --transpile-only --no-notify src/index.ts",
    "build": "npm run generate && tsc -p .",
    "start": "node 'dist/index.js'",
    "test": "npm run generate && jest --verbose --watchAll=false",
    "generate": "ts-node --transpile-only src/schema",
    "schemagen": "ts-node src/scripts/schemagen.ts",
    "codegen": "graphql-codegen --config codegen.yml",
    "seed": "ts-node src/scripts/seed.ts",
    "docker:build": "docker-compose --file docker-compose.yml up --build --detach",
    "docker:exec": "docker exec --interactive=true --tty=true mongo-db /bin/bash"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "latest",
    "apollo-server-express": "^3.10.3",
    "body-parser": "latest",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-compose": "latest",
    "graphql-compose-connection": "latest",
    "graphql-compose-mongoose": "latest",
    "graphql-middleware": "^6.1.33",
    "graphql-tools": "^8.3.6",
    "mongoose": "latest",
    "mongoose-bcrypt": "latest"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.5",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-operations": "^2.5.3",
    "@graphql-codegen/typescript-resolvers": "^2.7.3",
    "@types/cors": "latest",
    "@types/express": "^4.17.14",
    "@types/faker": "latest",
    "@types/fs-extra": "latest",
    "@types/jest": "^29.1.2",
    "@types/mongoose": "latest",
    "@types/node": "^18.8.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "faker": "latest",
    "fs-extra": "latest",
    "get-port": "^6.1.2",
    "graphql-request": "^5.0.0",
    "husky": "latest",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "testEnvironment": "node"
  }
}
