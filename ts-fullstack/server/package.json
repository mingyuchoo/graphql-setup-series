{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint --config .eslintrc.yml --fix './src/**/*.ts'",
    "dev": "nodemon 'src/index.ts' --exec 'ts-node' src/index.ts -e ts,graphql",
    "build": "npm run clean && tsc -p . && rsync -av --progress src/graphql/typeDefs/* dist/graphql/typeDefs/ --exclude {'*.ts'}",
    "start": "npm run build && node 'dist/index.js'",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.25.1",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^7.0.5",
    "lodash": "^4.17.21",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-operations": "^1.18.0",
    "@graphql-codegen/typescript-resolvers": "1.19.2",
    "@types/express": "^4.17.12",
    "@types/graphql": "^14.5.0",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "graphql-import-node": "^0.0.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0"
  }
}
