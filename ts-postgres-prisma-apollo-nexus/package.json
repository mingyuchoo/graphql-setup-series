{
  "name": "back-end",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist coverage src/@types src/schema",
    "lint": "eslint --config .eslintrc.yml --fix './src/**/*.ts'",
    "dev": "ts-node-dev --exit-child --respawn --transpile-only --no-notify src/index.ts",
    "start": "npm run build && cp src/types.ts dist && node 'dist/index.js'",
    "build": "npm run clean && npm run prisma:migrate:save && npm run prisma:migrate:up && npm run prisma:generate && npm run prisma:transpile && tsc -p .",
    "test": "jest --detectOpenHandles --verbose --watchAll=false",
    "prisma:introspect": "prisma introspect",
    "prisma:migrate:save": "prisma migrate save --experimental",
    "prisma:migrate:up": "prisma migrate up --experimental --verbose",
    "prisma:generate": "prisma generate",
    "prisma:transpile": "ts-node --transpile-only src/schema",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node ./prisma/seed.ts",
    "codegen": "nodemon 'src/index.ts' --exec 'graphql-codegen --config codegen.yml'",
    "docker:build": "docker-compose --file docker-compose.yml up --build --detach",
    "docker:exec:postgresql-db": "docker exec --interactive=true --tty=true postgresql-db /bin/bash"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nexus/schema": "^0.19.2",
    "@prisma/cli": "~2.20.1",
    "@prisma/client": "~2.22.0",
    "@types/express": "^4.17.11",
    "apollo-server": "^2.24.0",
    "apollo-server-express": "^2.24.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.4",
    "nexus-plugin-prisma": "^0.34.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-operations": "^1.17.16",
    "@graphql-codegen/typescript-resolvers": "^1.19.1",
    "@types/faker": "^5.5.3",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "latest",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "faker": "^5.5.3",
    "get-port": "^5.1.1",
    "graphql-request": "^3.4.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6"
  }
}
